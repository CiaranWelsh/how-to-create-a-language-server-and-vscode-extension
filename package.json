{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "wsrun build --exclude-missing --serial",
    "lint": "prettier --loglevel warn --write \"**/*.{ts,tsx,json,md}\"",
    "unit": "wsrun unit --exclude-missing --serial",
    "ci": "yarn build && yarn lint && yarn unit"
  },
  "devDependencies": {
    "prettier": "^1.14.2",
    "wsrun": "^2.2.1"
  }
}
