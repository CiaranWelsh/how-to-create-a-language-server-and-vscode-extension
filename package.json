{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "wsrun --exclude-missing --serial build",
    "lint": "prettier --loglevel warn --write \"**/*.{ts,tsx,json,md}\"",
    "unit": "wsrun --exclude-missing --serial unit",
    "ci": "yarn build && yarn lint && yarn unit"
  },
  "devDependencies": {
    "prettier": "^1.14.3",
    "wsrun": "^3.3.3"
  }
}
